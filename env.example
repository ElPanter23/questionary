# Question Tool Environment Configuration
# Copy this file to .env and adjust the values for your environment

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_PATH=./server/database/questions.db

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Optional: API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Logging Level
LOG_LEVEL=info

# Optional: Session Configuration
SESSION_SECRET=your-secret-key-here

# Optional: Web Scraping Configuration
SCRAPING_USER_AGENT=QuestionTool/1.0.0
SCRAPING_TIMEOUT=10000
